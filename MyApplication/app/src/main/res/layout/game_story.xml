<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_revert"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="533dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="177dp">

                <ImageView
                    android:id="@+id/img_action1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center|top"
                    app:srcCompat="@drawable/story_actionbg" />

                <Button
                    android:id="@+id/action1"
                    android:layout_width="307dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center|top"

                    android:background="@android:color/transparent"
                    android:text="action1"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_action2"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="bottom|center"
                    app:srcCompat="@drawable/story_actionbg" />

                <Button
                    android:id="@+id/action2"
                    android:layout_width="307dp"
                    android:layout_height="90dp"
                    android:layout_gravity="bottom|center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="action2"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:layout_weight="1">

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="82dp"
                    android:layout_height="145dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rolename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="rolename"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:fontFamily="sans-serif-black" />

                    <ImageView
                        android:id="@+id/rolePic"
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/contentbg"
                    android:layout_width="296dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/story_dialogbg">

                    <TextView
                        android:id="@+id/question"
                        android:layout_width="275dp"
                        android:layout_height="132dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Sentence"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="97dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_per"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/story_pervious_sentence" />

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/story_next_sentence"
                        android:gravity="end" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/design_default_color_background" />

    </FrameLayout>

</LinearLayout>